{
  "Description": "HQniversity Trivia Assistant app template",  
  "Resources": {
    "CodeBuildBucket" : {
        "Type" : "AWS::S3::Bucket",
        "Properties" : {
            "BucketName" : "hqu-test-505"
        }
    },
    "CodeBuildRole" : {
        "Type": "AWS::IAM::Role",
        "Properties": {
            "AssumeRolePolicyDocument": {
                "Statement": [
                    {
                        "Action": [
                            "sts:AssumeRole"
                        ],
                        "Effect": "Allow",
                        "Principal": {
                            "Service": [
                                "codebuild.amazonaws.com"
                            ]
                        }
                    }   
                ],
                "Version": "2012-10-17"
            },
            "Path": "/",
            "Policies": [
                {
                    "PolicyName": "CodeBuildAccess",
                    "PolicyDocument": {
                        "Version": "2012-10-17",
                        "Statement": [
                         {
                            "Action": [
                                "logs:*",
                                "s3:*",
                                "ec2:CreateNetworkInterface",
                                "ec2:DescribeNetworkInterfaces",
                                "ec2:DeleteNetworkInterface",
                                "ec2:DescribeSubnets",
                                "ec2:DescribeSecurityGroups",
                                "ec2:DescribeDhcpOptions",
                                "ec2:DescribeVpcs",
                                "ec2:CreateNetworkInterfacePermission"
                            ],
                            "Effect": "Allow",
                            "Resource": "*"
                         }
                        ]
                    }
                }
            ]
        }
    },
    "CodeBuildVPC": {
      "Type": "AWS::EC2::VPC",
      "Properties": {
        "CidrBlock": "10.0.0.0/16",
        "EnableDnsSupport": "true",
        "EnableDnsHostnames": "true",
        "Tags": [
          {
            "Key": "name",
            "Value": "codebuild"
          }
        ]
      }
    },


    "CodeBuildSubnet": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "VpcId": {
          "Ref": "CodeBuildVPC"
        },
        "CidrBlock": "10.0.1.0/24"
      }
    },
    "CodeBuildSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "Codebuild Internet Group",
        "GroupDescription": "CodeBuild SecurityGroup",
        "VpcId": {
          "Ref": "CodeBuildVPC"
        }
      }
    },
    "CodeBuildProject" : {
           "Type" : "AWS::CodeBuild::Project",
           "Properties" : {
               "Name"        : "hqniversity-2-build-lambda-project",
               "Description" : "Building the Lambda Functions",
               "ServiceRole": {
                    "Ref": "CodeBuildRole"
               },
               "Artifacts"   : {
                   "Type" : "CODEPIPELINE"
               },
               "Environment": {
                    "Type": "LINUX_CONTAINER",
                    "ComputeType": "BUILD_GENERAL1_SMALL",
                    "Image": "aws/codebuild/ubuntu-base:14.04",

                    "EnvironmentVariables": [
                        {
                        "Name" : "varName",
                        "Value": "varValue"
                        }
                    ]
                },
               "Source" : {
                   "Type"       : "CODEPIPELINE"         
               },
               "TimeoutInMinutes": 10
           }
    },

  "AppPipeline": {
    "Type": "AWS::CodePipeline::Pipeline",
    "Properties": {
        "RoleArn": "arn:aws:iam::187231954982:role/AWS-CodePipeline-Service",
        "Stages": [
                    {
                    "Name": "Source",
                    "Actions": [
                        {
                            "Name": "SourceAction",
                            "ActionTypeId": {
                                "Category": "Source",
                                "Owner": "ThirdParty",
                                "Version": "1",
                                "Provider": "GitHub"
                            },
                            "OutputArtifacts": [
                                {
                                    "Name": "SourceOutput"
                                }
                            ],
                            "Configuration": {
                                "Owner":   "matthew-trump",
                                "Repo" :   "hqu-trivia-api-backend", 
                                "Branch" : "master",
                                "OAuthToken" : "c4a3523184478b2d51ba89d8c70551fbcf062fac"
                            },
                            "RunOrder": 1
                        }
                     ]
                    },
                    {
                    "Name": "Build",
                    "Actions": [
                        {
                            "Name": "BuildAction",
                            "InputArtifacts": [
                                {
                                    "Name": "SourceOutput"
                                }
                            ],
                            "ActionTypeId": {
                                "Category": "Build",
                                "Owner": "AWS",
                                "Version": "1",
                                "Provider": "CodeBuild"
                            },
                            "Configuration": {
                                "ProjectName" : { "Ref" : "CodeBuildProject" }
                            },
                            "OutputArtifacts": [
                                {
                                     "Name": "BuildOutput"
                                }
                            ],
                            "RunOrder": 1
                        }
                     ]
                    },
                    {
                    "Name": "Staging", 
                    "Actions": [
                            {
                                "Name": "MakeChangeSet", 
                                "ActionTypeId": {
                                    "Category": "Deploy", 
                                    "Owner": "AWS", 
                                    "Version": "1", 
                                    "Provider": "CloudFormation"
                                }, 
                                "InputArtifacts": [
                                    {
                                        "Name": "BuildOutput"
                                    }
                                ], 
                                "OutputArtifacts": [], 
                                "Configuration": {
                                    "ActionMode": "CHANGE_SET_REPLACE", 
                                    "StackName": "HQUTest505", 
                                    "ChangeSetName": "HQUTestChangeSet", 
                                    
                                    "RoleArn": "arn:aws:iam::187231954982:role/hqu-lambda-execution-role", 
                                    "Capabilities": "CAPABILITY_IAM", 
                                   
                                    "TemplatePath": "BuildOutput::outputSamTemplate.yaml"
                                }, 
                                "RunOrder": 1
                            }
                        ]
                    },
                    {
                        "Name": "Deploy", 
                        "Actions": [
                            {
                               
                                "Name": "DeployChangeSet", 
                                "ActionTypeId": {
                                    "Category": "Deploy", 
                                    "Owner": "AWS", 
                                    "Version": "1", 
                                    "Provider": "CloudFormation"
                                }, 
                                "InputArtifacts": [], 
                                "OutputArtifacts": [], 
                                "Configuration": {
                                    "StackName": "HQUTest505", 
                                    "ActionMode": "CHANGE_SET_EXECUTE", 
                                    "ChangeSetName": "HQUTestChangeSet"
                                }, 
                                "RunOrder": 1
                            }
                          ]
                    }
    ],
    "ArtifactStore": {
      "Type": "S3",
      "Location": { "Ref" : "CodeBuildBucket" }
    }
  }
}
}
}
